<tagLib name="html"/>
<load href="__TMPL__Public/js/jquery.js"/>
<load href="__TMPL__Public/js/jquery-ui-1.7.3.custom.min.js"/>
<load href="__TMPL__Public/js/index.js"/>
<load href="__TMPL__Public/js/user.js"/>
<script type="text/javascript">
$(function() {
	$('#SummarydateShow').datepicker();
	$("#dialog-delSummary").dialog({
		bgiframe: true,
		autoOpen: false,
		height: 100,
		modal: true,
	});
	$("#dialog-mailList").dialog({
		bgiframe: true,
		autoOpen: false,
		height: 200,
		modal: true,
	});
});
</script>

<link rel="stylesheet" type="text/css" href="__TMPL__Public/css/public.css" />
<link rel="stylesheet" type="text/css" href="__TMPL__Public/css/user.css" />
<link rel="stylesheet" type="text/css" href="__TMPL__Public/css/ui.all.css" />

<div id="dialog-delSummary" class="dialog" title="删除个人总结">
	<p>确定删除个人总结？</p>
	<div class="datalist"></div>
	<button onclick="cancel()">取消</button>
	<button onclick="deleteSummary()">确定</button>
</div>

<div id="dialog-mailList" class="dialog" title="发送对象列表">
	<p>发送对象</p>
	<table>
	<volist id="sendList" name="sendList">
		<tr><td><input type="checkbox" name="{$sendList.username}"/><td>
		<td><span>{$sendList.user_name}</span></td></tr>
	</volist>
	</table>
	<button onclick="cancel()">取消</button>
	<button onclick="suresend()">确定</button>
</div>

<include file="Public:top"/>
<div class="main_user">
<include file="User:leftMenu"/>
<!--右边详细信息-->
<div class="main_summary">
	<h2 class="subNav">个人总结</h2>
	<div class="showmsgpart">
	<!--显示日程表信息-->
	<div class="sub_summarylist">
	<div class="listlan">
		<div class="sc-menu">
			<a style="width:80px;" onclick="NewSummaryShow()">新建个人总结</a><a class="delete-summary">删除</a>
		</div>
	</div>
		<table>
			<volist id="vo" name="list">
			<tr>
				<td width="7%" style="padding-left:8px;"><input type="checkbox" name="{$vo.summary_id}"/></td>
				<td width="18%" ><a style="text-decoration:underline;" class="summary_theme">{$vo.summary_theme}</a></td>
				<td width="40%">创建时间:{$vo.summary_editdate}  发送对象:{$vo.summary_to}</td><td width="27%">发送时间:{$vo.summary_senddate}</td>
				<td width="6%" style="padding-left:6px;"><div class="summaryedit-ico"></div></td>
			</tr>
			</volist>
		</table>
	<div class="listlan">
		<div class="sc-menu">
			<a style="width:80px;" onclick="NewSummaryShow()">新建个人总结</a><a class="delete-summary">删除</a>
		</div>
	</div>
	</div>
	<!--编辑个人总结-->
	<div class="edit_summary">
	<div class="listlan">
		<div class="sc-menu">
			<a onclick="backback()"><<返回</a><a style="width:80px;" onclick="saveSummary()">保存个人总结</a><a class="sendsummary">发送</a><a onclick="backback()">取消</a>
		</div>
	</div>
	<table>
	<tr><td class="summary_title">主题:</td><td><input type="text" style="width:100%" id="theme"/></td></tr>
	<tr><td class="summary_title">内容:</td><td><textarea style="width:100%;height:130px;" id="content"/></textarea></td></tr>
	</table>
	<div class="listlan">
		<div class="sc-menu">
			<a onclick="backback()"><<返回</a><a style="width:80px;" onclick="saveSummary()">保存个人总结</a><a class="sendsummary">发送</a><a onclick="backback()">取消</a>
		</div>
	</div>
	</div>
</div>

</div>
<div id="SummarydateShow"></div>
</div>
<include file="Public:footer"/>